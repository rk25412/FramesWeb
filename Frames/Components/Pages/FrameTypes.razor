@page "/FrameTypes"
<PageTitle>Frame Types</PageTitle>

<h4>
    Frame Types
    @if (_frameTypesList.Count > 0)
    {
        <RadzenButton Text="Add Frame Type" class="float-end" Click="OnAddFrameTypeClick"/>
    }
</h4>

@if (_frameTypesList.Count is 0)
{
    <div class="text-center mt-5">
        <p class="text-center">No Records Found</p>
        <RadzenButton Text="Add Frame Type" Click="OnAddFrameTypeClick"/>
    </div>
}
else
{
    <div class="mt-5">
        <RadzenDataGrid @ref="_frameTypeGrid" AllowFiltering="true" AllowSorting="true" PageSize="10" AllowPaging="true"
                        PagerHorizontalAlign="HorizontalAlign.Left" ShowPagingSummary="true" Data="_frameTypesList">
            <Columns>
                <RadzenDataGridColumn Property="@nameof(FrameTypeDto.Name)" Title="Name" TextAlign="TextAlign.Center"/>
                <RadzenDataGridColumn Property="@nameof(FrameTypeDto.MasterRate)" Title="Master Rate" TextAlign="TextAlign.Center"/>
                <RadzenDataGridColumn Property="@nameof(FrameTypeDto.WorkerRate)" Title="Worker Rate" TextAlign="TextAlign.Center"/>
                <RadzenDataGridColumn Title="Action" TextAlign="TextAlign.Center" Filterable="false" Sortable="false">
                    <Template Context="data">
                        <RadzenButton ButtonType="ButtonType.Button" Size="ButtonSize.Medium"
                                      ButtonStyle="ButtonStyle.Warning" Icon="edit"
                                      Click="async () => await OnUpdateFrameTypeClick(data)"/>
                        <RadzenButton ButtonType="ButtonType.Button" Size="ButtonSize.Medium"
                                      ButtonStyle="ButtonStyle.Danger" Icon="delete"
                                      Click="async() => await OnDeleteClick(data)"/>
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    </div>
}